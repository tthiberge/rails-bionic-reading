<div class="container-global bg-white" data-controller="form" data-form-target="window">

  <div id="translation_content" class="d-none" data-form-target="result">

  </div>

  <br>
  <p class="btn btn-warning rounded-pill d-none" data-form-target="change" data-action="click->form#changeText">
    Change my non-bionic text
  </p>
  <br><br>


  <%= simple_form_for @translation, url: translations_path, html: {data: {
    form_target: "formulaire",
    action: "submit->form#display"}} do |f| %>
    <%= f.input :content,
                as: :text,
                label: "Text input:",
                required: false,
                placeholder: "Enter here the text that you want to transform into bionic reading",
                input_html: {
                  class: "bg-light",
                  data: {form_target: "input"}}%>
    <%= f.submit "Apply Bionic Reading to my text",
                  class: "btn btn-success rounded-pill"
                  # ,data: {action: "click->form#display"}
    %>
  <% end %>


<br><br>
